.bookshelf-container {
  padding: 20px;
  padding-top: 60px;
  position: relative;
  background-image: url('your-bookshelf-image-url');
  background-size: cover;
  background-position: center;
  min-height: 100vh;
  touch-action: manipulation;
}

.history-menu-icons {
  position: absolute;
  top: 20px;
  right: 20px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.history-icon {
  font-size: 24px;
  cursor: pointer;
  margin-right: 10px;
}

.menu-component {
  /* 可以添加菜单组件的样式 */
}

.book-list {
  display: flex;
  flex-wrap: wrap;
}

.book-item {
  height: 150px;
  margin: 10px 0;
  position: relative;
  box-sizing: border-box;
  padding: 0 5px;
}

.book-item image {
  width: 100%;
  height: 100%;
}

.add-book-button {
  position: fixed;
  bottom: 20px;
  right: 20px;
  width: 50px;
  height: 50px;
  background-color: #007aff;
  color: white;
  border-radius: 50%;
  text-align: center;
  line-height: 50px;
  font-size: 30px;
}

.book-info-popup {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 10px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}