.container {
  padding: 20px;
  background: linear-gradient(to bottom, #ffffff, rgb(216, 243, 188));
  min-height: 100vh;
}

.post-box {
  background-color: #fff;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 16px;
  font-weight: bold;
  color: #14171a;
}

.post-time {
  font-size: 12px;
  color: #6c757d;
}

.post-content-box {
  margin-bottom: 20px;
}

.post-title {
  font-size: 24px;
  font-weight: bold;
  color: #14171a;
  margin-bottom: 10px;
  text-align: left;
}

.post-content {
  font-size: 16px;
  color: #14171a;
  line-height: 1.6;
  text-align: left;
  text-indent: 2em;
}

.post-image {
  width: 100%;
  height: 300px;
  border-radius: 10px;
  margin-bottom: 20px;
}

.like-section {
  display: flex;
  justify-content: center;
  margin-top: 30px;
}

.like-button {
  display: flex;
  align-items: center;
  padding: 10px 20px;
  background-color: #1da1f2;
  color: white;
  border-radius: 20px;
  border: none;
}

.like-icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.spacer {
  height: 10px; /* 空行高度 */
} 